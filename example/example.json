{
    "name": "hello",
    "url": "http://localhost:3000/api/trpc",
    "tests": [
        {
            "name": "valid query",
            "query": {
                "route": "example.hello",
                "input": {
                    "text": "Matt"
                }
            },
            "success": {
                "status": 200
            }
        },
        {
            "name": "bad query",
            "query": {
                "route": "example.hello",
                "input": {
                    "text": "404pls"
                }
            },
            "success": {
                "status": 200
            }
        },
        {
            "name": "data query",
            "query": {
                "route": "example.hello",
                "input": {
                    "text": "Matt2"
                }
            },
            "success": {
                "data": {
                    "greeting": "Hello Matt2"
                }
            }
        },
        {
            "name": "bad data query",
            "query": {
                "route": "example.hello",
                "input": {
                    "text": "Matt2"
                }
            },
            "success": {
                "data": {
                    "farewell": "Goodbye Matt2"
                }
            }
        },
        {
            "name": "mutation",
            "mutation": {
                "route": "example.makeChange",
                "input": {
                    "count": 8
                }
            },
            "success": {
                "status": 200
            }
        }
    ]
}