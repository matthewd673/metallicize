{
    "name": "hello",
    "url": "http://localhost:3000/api/trpc",
    "tests": [
        {
            "name": "valid query",
            "query": {
                "route": "example.hello",
                "input": {
                    "text": "Matt"
                }
            },
            "success": {
                "status": 200
            }
        },
        {
            "name": "bad query",
            "query": {
                "route": "example.hello",
                "input": {
                    "text": "404pls"
                }
            },
            "success": {
                "status": 404,
                "headers": {
                    "Content-Type": "application/json"
                }
            }
        },
        {
            "name": "data query",
            "query": {
                "route": "example.hello",
                "input": {
                    "text": "Matt2"
                }
            },
            "success": {
                "data": {
                    "greeting": "Hello Matt2"
                }
            }
        },
        {
            "name": "bad data query",
            "query": {
                "route": "example.hello",
                "input": {
                    "text": "Matt3"
                }
            },
            "success": {
                "data": {
                    "farewell": "Goodbye Matt3"
                }
            }
        },
        {
            "name": "mutation",
            "mutation": {
                "route": "example.makeChange",
                "input": {
                    "count": 8
                }
            },
            "success": {
                "status": 200
            }
        },
        {
            "name": "query batch",
            "queries": [
                {
                    "route": "example.hello",
                    "input": {
                        "text": "Red Fish"
                    }
                },
                {
                    "route": "example.hello",
                    "input": {
                        "text": "Blue Fish"
                    }
                }
            ],
            "success": {
                "code": "NOT_FOUND"
            }
        },
        {
            "name": "mut batch",
            "mutations": [
                {
                    "route": "example.makeChange",
                    "input": {
                        "count": 2
                    }
                },
                {
                    "route": "example.makeChange",
                    "input": {
                        "count": 4
                    }
                },
                {
                    "route": "example.makeChange",
                    "input": {
                        "count": 6
                    }
                }
            ],
            "success": {
                "status": 200
            }
        }
    ]
}